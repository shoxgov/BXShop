<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="6dip"
        android:paddingTop="6dip" >

        <LinearLayout
            android:id="@+id/address_user_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center_vertical"
            android:weightSum="3" >

            <TextView
                android:id="@+id/address_manager_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="华为 Mate9"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16" />

            <TextView
                android:id="@+id/address_manager_tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_weight="2"
                android:text="17773119860"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/address_manager_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address_user_layout"
            android:layout_below="@+id/address_user_layout"
            android:layout_marginTop="3dip"
            android:text="长沙区辐在西安十四华为 Mate9"
            android:textColor="@color/grey" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/mainbg" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/address_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:button="@drawable/drawable_address_checked"
            android:padding="5dip"
            android:background="@color/textred"
            android:text="默认"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:textSize="@dimen/textSize_14" />
<!--         <CheckBox
            android:id="@+id/address_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:button="@drawable/drawable_address_checked"
            android:padding="3dip"
            android:text="默认"
            android:textColor="@color/grey"
            android:textSize="@dimen/textSize_14" /> -->

        <Button
            android:id="@+id/address_manager_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/address_manager_del"
            android:background="@null"
            android:drawableLeft="@mipmap/address_edit_img"
            android:drawablePadding="3dip"
            android:text="编辑"
            android:textColor="@color/grey"
            android:textSize="@dimen/textSize_14" />

        <Button
            android:id="@+id/address_manager_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:drawableLeft="@mipmap/address_delete"
            android:drawablePadding="3dip"
            android:text="删除"
            android:textColor="@color/grey"
            android:textSize="@dimen/textSize_14" />
    </RelativeLayout>

</LinearLayout>